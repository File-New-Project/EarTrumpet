<Window x:Class="EarTrumpet.UI.Views.HardwareSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:resx="clr-namespace:EarTrumpet.Properties"
        
        xmlns:local="clr-namespace:EarTrumpet.UI.Views"
        mc:Ignorable="d"
        Title="{x:Static resx:Resources.HardwareSettingsText}" Height="252.667" Width="341">
    <Grid HorizontalAlignment="Left" Width="333" Height="222" VerticalAlignment="Top">
        <Label Content="{x:Static resx:Resources.MidiDevice}" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="ComboBoxAvailableMidiDevices" HorizontalAlignment="Left" Margin="108,118,0,0" VerticalAlignment="Top" Width="210" ItemsSource="{Binding MidiDevices}" Style="{DynamicResource {x:Type ItemsControl}}" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True" SelectedItem="{Binding SelectedMidi}"/>
        <Label Content="{x:Static resx:Resources.Command}" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxCommand" HorizontalAlignment="Left" Margin="108,37,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding Commands}" IsReadOnly="True" SelectedItem="{Binding SelectedCommand}"/>
        <Label Content="{x:Static resx:Resources.Control}" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonSelectMidiDeviceControl" Content="{x:Static resx:Resources.Select}" HorizontalAlignment="Left" Margin="108,148,0,0" VerticalAlignment="Top" Width="62" Style="{DynamicResource {x:Type ContentControl}}" Click="ButtonSelectMidiDeviceControl_Click" />
        <Label x:Name="LabelSelectedMidiControl" Content="Selected Control" HorizontalAlignment="Left" Margin="180,145,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonSaveMidiControlCommand" Content="{x:Static resx:Resources.Save}" HorizontalAlignment="Left" Margin="256,188,0,0" VerticalAlignment="Top" Width="62" Click="ButtonSaveMidiControlCommand_Click" Style="{DynamicResource {x:Type ContentControl}}" RenderTransformOrigin="0.532,0.4"/>
        <Label Content="{x:Static resx:Resources.Mode}" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxMode" HorizontalAlignment="Left" Margin="108,64,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding Modes}" IsReadOnly="True" SelectedItem="{Binding SelectedMode}" IsEnabled="{Binding ModeSelectionEnabled}" />
        <Label Content="{x:Static resx:Resources.Selection}" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxIndexesApplications" HorizontalAlignment="Left" Margin="108,91,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding ApplicationIndexesNames}" IsReadOnly="True" SelectedItem="{Binding SelectedIndexesApplications}" IsEnabled="{Binding IndexesApplicationsSelectionEnabled}"/>
        <Label Content="{x:Static resx:Resources.AudioDevice}" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxAudioDevice" HorizontalAlignment="Left" Margin="108,10,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding AudioDevices}" IsReadOnly="True" SelectedItem="{Binding SelectedDevice}"/>
    </Grid>
</Window>

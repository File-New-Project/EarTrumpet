<Window x:Class="EarTrumpet.UI.Views.HardwareSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:resx="clr-namespace:EarTrumpet.Properties"
        
        xmlns:local="clr-namespace:EarTrumpet.UI.Views"
        mc:Ignorable="d"
        Title="{x:Static resx:Resources.HardwareSettingsText}" Height="361.334" Width="341">
    <Grid HorizontalAlignment="Left" Width="333" Margin="0,0,0,5">
        <Label Content="{x:Static resx:Resources.DeviceTypeText}" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="ComboBoxDeviceType" HorizontalAlignment="Left" Margin="108,118,0,0" VerticalAlignment="Top" Width="210" ItemsSource="{Binding DeviceTypes}" Style="{DynamicResource {x:Type ItemsControl}}" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True" SelectedItem="{Binding SelectedDeviceType}"/>
        <Label Content="{x:Static resx:Resources.CommandText}" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxCommand" HorizontalAlignment="Left" Margin="108,37,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding Commands}" IsReadOnly="True" SelectedItem="{Binding SelectedCommand}"/>
        <Label Content="{x:Static resx:Resources.ControlText}" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonSelectControl" Content="{x:Static resx:Resources.SelectText}" HorizontalAlignment="Left" Margin="108,148,0,0" VerticalAlignment="Top" Width="62" Style="{DynamicResource {x:Type ContentControl}}" Command="{Binding SelectControlCommand}" />
        <TextBlock x:Name="LabelSelectedControl" Text="{Binding SelectedControl}" HorizontalAlignment="Left" Margin="108,176,0,0" Width="210" Height="115" VerticalAlignment="Top" TextWrapping="Wrap"/>
        <Button x:Name="ButtonSaveControlCommand" Content="{x:Static resx:Resources.SaveText}" HorizontalAlignment="Left" Margin="256,296,0,0" VerticalAlignment="Top" Width="62" Style="{DynamicResource {x:Type ContentControl}}" RenderTransformOrigin="0.532,0.4" Command="{Binding SaveCommandControlMappingCommand}"/>
        <Label Content="{x:Static resx:Resources.ModeText}" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxMode" HorizontalAlignment="Left" Margin="108,64,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding Modes}" IsReadOnly="True" SelectedItem="{Binding SelectedMode}" IsEnabled="{Binding ModeSelectionEnabled}" />
        <Label Content="{x:Static resx:Resources.SelectionText}" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxIndexesApplications" HorizontalAlignment="Left" Margin="108,91,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding ApplicationIndexesNames}" IsReadOnly="True" SelectedItem="{Binding SelectedIndexesApplications}" IsEnabled="{Binding IndexesApplicationsSelectionEnabled}"/>
        <Label Content="{x:Static resx:Resources.AudioDeviceText}" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxAudioDevice" HorizontalAlignment="Left" Margin="108,10,0,0" VerticalAlignment="Top" Width="210" Style="{DynamicResource {x:Type ItemsControl}}" ItemsSource="{Binding AudioDevices}" IsReadOnly="True" SelectedItem="{Binding SelectedDevice}"/>
        <Label Content="{x:Static resx:Resources.SelectionText}" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
